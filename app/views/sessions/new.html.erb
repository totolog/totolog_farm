<% provide(:title, "ログイン") %>
    <section class="signIn">
        <div class="signIn_container">
            <div class="signIn_area side2">
                <div class="signIn_title"><h3>ログイン</h3></div>
                <div class="enter_container">
                    <%= form_for(:session, url: login_path, html: {class: "new_user"}) do |f| %>
                        <%= f.label :email, "Email", class: "label_field" %>
                        <%= f.text_field :email, class: "form_area"%>
                        
                        <%= f.label :password, "パスワード", class: "label_field" %>
                        <%= f.password_field :password, class: "form_area"%>

                        <%= f.label :remember_me, class: "label_field" do %>
                            <%= f.check_box :remember_me %>
                            <span>次回から入力しない</span>
                        <% end %>

                        <%= f.submit "ログイン", class: "signin_btn" %>
                    <% end %>
                </div>
            </div>
        </div>
    </section>